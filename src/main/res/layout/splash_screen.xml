<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/globallogo"
        android:layout_width="188dp"
        android:layout_height="140dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/global"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="219dp"
        app:layout_constraintTop_toBottomOf="@id/globallogo"
        tools:layout_editor_absoluteX="16dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="4dp"
        android:backgroundTint="#FFDDED">

        <TextView
            android:id="@+id/lbladdressline1"
            android:layout_margin="8dp"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:text="Address:\n 251,GIDC,Chitra,Bhavnagar-364004\nGujarat,India"
            android:textColor="#FF51B0"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/globallogo"
            tools:layout_editor_absoluteX="0dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="4dp"
        android:backgroundTint="#6978C9"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/domesticcontact"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="Contact Details:\nDomestic Contact: +91 9375614961\n ,+91 9375473815 ,+91 9925816222\nE-mail-globalnwf@gmail.com "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_margin="8dp"/>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="4dp"
        android:backgroundTint="#ddffdd">

        <TextView
            android:id="@+id/exportcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/domesticcontact"
            android:text="Export Contact:+91 6358189866\nE-mail-exportglobalnw@gmail.com"
            android:textSize="14sp"
            android:textColor="#26580F"
            android:layout_margin="8dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/card3"
        android:backgroundTint="#755139">


        <TextView
            android:id="@+id/website"
            android:layout_width="387dp"
            android:layout_height="67dp"
            android:layout_margin="8dp"
            android:text="website:\nwww.globalnonwovenfabrics.com\nwww.globalnonwovenfabric.com"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>